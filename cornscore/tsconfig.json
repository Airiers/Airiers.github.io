{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "target": "es2015",
        "module": "commonjs",
        "noEmitOnError": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "types": ["node"],
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
